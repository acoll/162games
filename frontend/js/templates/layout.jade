.row
	.columns.bottom-line.desktop-12.black-bg
		h1 162 Games
		p Select a team or teams to highlight their metrics in the charts below.

	.columns.desktop-6.mlb-red-bg
		.row
			.columns.bottom-line.desktop-12
				h1 American League
				each division in ['East', 'Central', 'West']
					.columns.desktop-4
						.row
							.columns.bottom-line.desktop-12
								h4 #{division}
							.columns.bottom-line.desktop-12
								each team in teams.filter(t => t.division === division && t.conference === 'American')
									.teamname(class=team.team_id) #{team.first_name}
	.columns.desktop-6.mlb-blue-bg
		.row
			.columns.bottom-line.desktop-12
				h1 National League
				each division in ['East', 'Central', 'West']
					.columns.desktop-4
						.row
							.columns.bottom-line.desktop-12
								h4 #{division}
							.columns.bottom-line.desktop-12
								each team in teams.filter(t => t.division === division && t.conference === 'National')
									.teamname(class=team.team_id) #{team.first_name}
	.columns.desktop-12
		h3.align-center Games Above or Below .500
	.columns.desktop-12
		.chart-holder
			canvas#chart
	.columns.desktop-6
		h3.align-center Home Runs
		.chart-holder
			canvas#chart2
	.columns.desktop-6
		h3.align-center Earned Runs Allowed
		.chart-holder
			canvas#chart3
	.columns.desktop-6
		h3.align-center Errors
		.chart-holder
			canvas#chart4
	.columns.desktop-6
		h3.align-center Runs +/-
		.chart-holder
			canvas#chart5
